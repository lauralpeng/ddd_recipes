<% was_validated = ingredient.errors.any? %>

<%= form_with(model: ingredient, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for ingredient_name start -->
  <div class="form-group">
    <% ingredient_name_class = "form-control" %>
    <% ingredient_name_was_invalid = ingredient.errors.include?(:ingredient_name) %>

    <% if was_validated %>
      <% if ingredient_name_was_invalid %>
        <% ingredient_name_class << " is-invalid" %>
      <% else %>
        <% ingredient_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :ingredient_name %>
    <!-- Input for ingredient_name start -->
    <%= f.text_field :ingredient_name, class: ingredient_name_class, placeholder: "Enter ingredient name" %>
    <!-- Input for ingredient_name end -->
    <% if ingredient_name_was_invalid %>
      <% ingredient.errors.full_messages_for(:ingredient_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for ingredient_name end -->
  <!-- Label and input for have_vs_buy start -->
  <div class="form-check">
    <% have_vs_buy_class = "form-check-input" %>
    <% have_vs_buy_was_invalid = ingredient.errors.include?(:have_vs_buy) %>

    <% if was_validated %>
      <% if have_vs_buy_was_invalid %>
        <% have_vs_buy_class << " is-invalid" %>
      <% else %>
        <% have_vs_buy_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :have_vs_buy, class: "form-check-label" do %>
      <%= f.check_box :have_vs_buy, class: have_vs_buy_class %> Have vs buy
    <% end %>
    <% if have_vs_buy_was_invalid %>
      <% ingredient.errors.full_messages_for(:have_vs_buy).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for have_vs_buy end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
