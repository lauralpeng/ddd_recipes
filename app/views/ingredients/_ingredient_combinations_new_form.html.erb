<%= form_with(model: @combination, local: true) do |f| %>

  <%= f.hidden_field :ingredient_id, value: @ingredient.id %>

  <div class="form-group">
    <%= f.label :quantity %>

    <%= f.text_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :unit %>

    <%= f.text_field :unit, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dish_id %>

    <%= f.collection_select :dish_id, Dish.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create combination", class: "btn btn-block btn-outline-secondary" %>
<% end %>
