<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Combinations

    <a data-toggle="collapse" href="#ingredient_combinations_new_form">
      Add combination
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @ingredient.combinations.each do |combination| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to combination, combination %>

        <%= link_to combination, method: :delete, data: { confirm: "Do you really want to delete this combination" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="ingredient_combinations_new_form">
        <%= render partial: "ingredients/ingredient_combinations_new_form" %>
      </div>
    </div>

  </ul>
</div>
