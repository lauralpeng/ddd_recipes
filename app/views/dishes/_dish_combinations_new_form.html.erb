<%= form_with(model: @recipe, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :ingredient_id %>

    <%= f.collection_select :ingredient_id, Ingredient.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>

    <%= f.text_field :quantity, class: "form-control" %>
  </div>

  <%= f.hidden_field :dish_id, value: @dish.id %>

  <div class="form-group">
    <%= f.label :unit %>

    <%= f.text_field :unit, class: "form-control" %>
  </div>

  <%= f.submit "Create recipe", class: "btn btn-block btn-outline-secondary" %>
<% end %>
