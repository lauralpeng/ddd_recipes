<%= form_with(model: @dish, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :dish_name %>

    <%= f.text_field :dish_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :source %>

    <%= f.text_field :source, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time_required %>

    <%= f.text_field :time_required, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dish_photo %>

    <%= f.file_field :dish_photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>

    <%= f.collection_select :category_id, Category.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create dish", class: "btn btn-block btn-outline-secondary" %>
<% end %>
